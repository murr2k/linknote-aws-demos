{
  "name": "bc-ferries-ops-dashboard",
  "version": "1.0.0",
  "description": "Professional maritime operations monitoring dashboard for BC Ferries fleet",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "node build.js",
